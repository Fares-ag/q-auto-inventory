rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    // Default: restrict all collections to authenticated users
    match /{document=**} {
      allow read: if isSignedIn();
      allow write: if isSignedIn();
    }

    // Example: lock down permissionSets to admins only (requires custom claims)
    // match /permissionSets/{id} {
    //   allow read: if isSignedIn();
    //   allow write: if request.auth.token.admin == true;
    // }
  }
}


