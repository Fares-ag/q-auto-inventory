rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    function isSignedIn() {
      return request.auth != null;
    }

    // Item media: restrict writes to authenticated users
    match /items/{itemId}/{allPaths=**} {
      allow read: if isSignedIn();
      allow write: if isSignedIn();
    }

    // Signatures: restrict to authenticated users for both read and write
    match /signatures/{itemId}/{allPaths=**} {
      allow read: if isSignedIn();
      allow write: if isSignedIn();
    }

    // Default: authenticated read, no write
    match /{allPaths=**} {
      allow read: if isSignedIn();
      allow write: if false;
    }
  }
}


